<aside id="sidebar">
  <nav>

<%= form_tag movies_path, :method => 'get', :id => "movies_search" do %>
  <p>
    <%= text_field_tag :search, params[:search], :remote => true %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="results">

  <ul>
    <% if @movies %>
    <p>Results:</p>
   <% @movies.each do |a| %>
     <li id="result_item"><%= link_to "#{a.title}, Released: #{a.released_on}", a %></li>
   <% end %>
<% else %>
   <p></p>
<% end %>
</ul>
</div>

<% end %>


    <ul>
      <li>
        <%= link_to 'All Movies', movies_path %>
      </li>
      <li>
        <%= link_to 'Add New Movie', new_movie_path %>
      </li>
    </ul>
  </nav>
</aside>

