<aside id="sidebar">
  <nav>

    <%= form_tag movies_path, :method => 'get' do %>
  <p>
    <center>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag " Search Movies ", :title => nil %>
  </center>
  </p>
<% end %>

<div id="results">
  <ul>
<% if @movies %>
    <h2><%= pluralize(@movies.size, 'Movie') %></h2>

    
    <% @movies.each do |a| %>

        <li id="result_item"><%= link_to "#{a.title}, Released: #{a.released_on}", a %></li><br />

    <% end %>

<% end %>
</ul>
</div>


    <ul>
      <li>
        <%= link_to 'All Movies', movies_path %>
      </li>
      <li>
        <%= link_to 'Add New Movie', new_movie_path %>
      </li>
    </ul>
  </nav>
</aside>

