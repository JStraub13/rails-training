


<% @movies.each do |movie| %>
  <article class="results">

</table>
  <tr> 
    <strong><%= link_to movie.title, movie %></strong> 
  </tr>
  <tr>
    <th>Released:</th>
    <td><%= movie.released_on %>
</td>
  </tr>
  <tr>
    <th>Rating:</th>
    <td><%= movie.rating %></td>
  </tr>
  <tr>
      <th>Director:</th>
      <td><%= movie.director %></td>
  </tr>
  <tr>
    <th>Total Gross:</th>
    <td><%= format_total_gross(movie) %>
</td>
  </tr>
</table>
</article>
<% end %>


