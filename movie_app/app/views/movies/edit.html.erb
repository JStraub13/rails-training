<h1>Editing Info For: <%= @movie.title %></h1>

<%= form_for(@movie) do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
    <p>
    <%= f.label :description %><br/>
    <%= f.text_field :description, cols: 40, rows: 7 %>
  </p>
    <p>
    <%= f.label :rating %><br/>
    <%= f.text_field :rating, size: 5 %>
  </p>
    <p>
    <%= f.label :released_on %><br/>
    <%= f.date_field :released_on %>
  </p>
    <p>
    <%= f.label :total_gross %><br/>
    <%= f.text_field :total_gross %>
  </p>
  <div>
    <%= f.submit %>
  </div>
<% end %>