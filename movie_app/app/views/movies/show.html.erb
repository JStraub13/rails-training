
  <article class="movie_show">
    <header>
      <h1><%= @movie.title %></h1>
    </header>
<%= image_tag(@movie.image_file_name) %>
    <table>
    	<tr>
    		<p>
    		<%= @movie.description %>
      </p>
    	</tr>
      <tr>
        <th>Released:</th>

        <td><%= @movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= number_to_currency(@movie.total_gross) %></td>
      </tr>
      <tr>
        <th>Cast:</th>
        <td><%= @movie.cast %></td>
      </tr>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>

    </table>
    <br>
    <%= link_to("All Movies", root_path) %> |
    <%= link_to "Edit", edit_movie_path(@movie) %> |
    <%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: 'Are you sure you want to delete this movie?'} %>

  </article>

