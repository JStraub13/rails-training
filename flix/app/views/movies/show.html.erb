
  <article>
    <header>
      <h1><%= @movie.title %></h1>
    </header>

    <table>
    	<tr>
    		<p>
    		<%= @movie.description %>
      </p>
    	</tr>
      <tr>
        <th>Released:</th>

        <td><%= @movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= number_to_currency(@movie.total_gross) %></td>
      </tr>
    </table>

    <%= link_to "All Movies", root_path %>

  </article>
